{
  "name": "Trust Bank",
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  "containerEnv": {
    "DISPLAY": ":1"
  },
  
  "postStartCommand": "bash .devcontainer/start-vnc.sh",
  
  "forwardPorts": [6080, 5901],
  
  "portsAttributes": {
    "6080": {
      "label": "noVNC",
      "onAutoForward": "openBrowser"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven"
      ],
      "settings": {
        "terminal.integrated.env.linux": {
          "DISPLAY": ":1"
        }
      }
    }
  }
}